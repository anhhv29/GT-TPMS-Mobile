    <ImageView
        android:id="@+id/imageView_warning_asl_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ln_lop_truoc_trai"
        app:layout_constraintStart_toEndOf="@+id/ln_lop_truoc_trai"
